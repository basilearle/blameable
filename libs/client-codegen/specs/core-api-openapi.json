{
  "openapi": "3.0.0",
  "info": {
    "version": "0.0.1",
    "title": "Blameable Core API"
  },
  "servers": [
    {
      "url": "/api",
      "description": "API Base Path"
    }
  ],
  "components": {
    "schemas": {},
    "parameters": {}
  },
  "paths": {
    "/admin/sites": {
      "get": {
        "description": "gets the sites assigned to the logged in user",
        "responses": {
          "200": {
            "description": "found a list of sites",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "sites": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "name": {
                            "type": "string"
                          },
                          "defaultLocale": {
                            "type": "string"
                          },
                          "configuredLocales": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          }
                        },
                        "required": [
                          "id",
                          "name",
                          "defaultLocale",
                          "configuredLocales"
                        ]
                      }
                    }
                  },
                  "required": [
                    "sites"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/blame": {
      "post": {
        "description": "assigns blame to the current user",
        "responses": {
          "201": {
            "description": "successfully assigned blame"
          }
        }
      }
    },
    "/bootstrap": {
      "get": {
        "description": "retrieves the live configuration and language tokens for the client",
        "parameters": [
          {
            "schema": {
              "type": "string",
              "example": "en-CA"
            },
            "required": false,
            "name": "locale",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "successfully retrieved site configurations",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "availableLocales": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "example": [
                        "en-CA",
                        "fr-CA",
                        "es-MX"
                      ]
                    },
                    "defaultLocale": {
                      "type": "string",
                      "example": "en-CA"
                    },
                    "tokens": {
                      "type": "object",
                      "additionalProperties": {
                        "type": "string"
                      }
                    }
                  },
                  "required": [
                    "availableLocales",
                    "defaultLocale",
                    "tokens"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "unable to retrieve site retrieved configurations"
          }
        }
      }
    },
    "/health": {
      "get": {
        "description": "indicates whether the server is running",
        "responses": {
          "200": {
            "description": "successfully retrieved configurations"
          }
        }
      }
    },
    "/tokens/{locale}": {
      "get": {
        "description": "retrieves the language tokens for a given locale",
        "parameters": [
          {
            "schema": {
              "type": "string",
              "example": "en-CA"
            },
            "required": true,
            "name": "locale",
            "in": "path"
          }
        ],
        "responses": {
          "200": {
            "description": "successfully retrieved tokens",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "tokens": {
                      "type": "object",
                      "additionalProperties": {
                        "type": "string"
                      }
                    }
                  },
                  "required": [
                    "tokens"
                  ]
                }
              }
            }
          },
          "404": {
            "description": "unable to retrieve tokens for locale"
          }
        }
      }
    }
  }
}