{
  "name": "@blameable/core-api",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "generate-openapi-spec": {
        "executor": "nx:run-commands",
        "cache": true,
        "outputs": ["{workspaceRoot}/libs/client-codegen/specs/core-api-openapi.json"],
        "options": {
          "command": "tsx tools/generate-openapi-spec.ts",
          "cwd": "{projectRoot}"
        }
      },
      "generate-openapi-client": {
        "executor": "nx:run-commands",
        "cache": true,
        "options": {
          "command": "tsx tools/generate-openapi-client.ts",
          "cwd": "{projectRoot}"
        }
      },
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/core-api/dist",
          "format": [
            "cjs"
          ],
          "bundle": false,
          "main": "apps/core-api/src/main.ts",
          "tsConfig": "apps/core-api/tsconfig.app.json",
          "assets": [
            "apps/core-api/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/core-api/dist/package.json",
          "{workspaceRoot}/apps/core-api/dist/package-lock.json"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/core-api/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "dev": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@blameable/core-api:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@blameable/core-api:build:development"
          },
          "production": {
            "buildTarget": "@blameable/core-api:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  },
  "dependencies": {}
}
